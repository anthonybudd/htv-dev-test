# ====================
# CLERK AUTHENTICATION
# ====================
# Get these from your Clerk dashboard at https://clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Optional: For custom sign-in/sign-up URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# ====================
# LINEAR INTEGRATION
# ====================
# Get your Linear API key from: https://linear.app/settings/api
LINEAR_API_KEY=lin_api_your_key_here
LINEAR_TEAM_ID=your_linear_team_id_here
LINEAR_WEBHOOK_SECRET=your_webhook_secret_here

# ====================
# DATABASE
# ====================
# PostgreSQL connection string
# Local development: postgres://user:password@localhost:5432/htv_test
# Cloud SQL: postgres://user:password@host:5432/database_name
DATABASE_URL="postgresql://postgres:password@localhost:5432/htv_test"

# ====================
# REAL-TIME UPDATES
# ====================
# Pusher credentials (for real-time updates)
NEXT_PUBLIC_PUSHER_APP_ID=your_pusher_app_id
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key
PUSHER_SECRET=your_pusher_secret
NEXT_PUBLIC_PUSHER_CLUSTER=us2

# Alternative: Ably credentials
# NEXT_PUBLIC_ABLY_KEY=your_ably_key

# ====================
# DEPLOYMENT
# ====================
# Your application URL (used for webhooks)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ====================
# OPTIONAL: MONITORING
# ====================
# For bonus points: error tracking
# SENTRY_DSN=your_sentry_dsn_here
# NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn_here

# OpenTelemetry (for advanced bonus)
# OTEL_EXPORTER_OTLP_ENDPOINT=your_otel_endpoint